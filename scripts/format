#!/bin/bash

source data/config

checkFileExt() {
    case $fileExt in
        c | cpp | js)
            
            ;;
        py)
            black -q $path
            ;;
        *)
            if [[ -x $path ]]; then
                shfmt -w -sr -ci -i=4 $path
            else
                echo "$fileExt extension not defined"
                exit 1
            fi
            ;;
    esac
}
