#!/bin/bash

source data/config.sh

checkFileExt() {
    case $fileExt in
        c | cpp | js)
            clang-format -i -style=Google $path
            ;;
        go)
            go fmt $path
            ;;
        py)
            black -q $path
            ;;
        *)
            if [[ -x $path || $fileExt == "sh" ]]; then
                shfmt -w -sr -ci -i=4 $path
            else
                echo "$fileExt extension not defined"
                exit 1
            fi
            ;;
    esac
}

if [[ -d $path ]]; then
    prettier -w --loglevel error $path
else
    checkFileExt
fi
